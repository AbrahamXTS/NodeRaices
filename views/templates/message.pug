extends ../layout/index

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-bold= title

        div.mt-8.mx-auto.max-w-md
                p(class=`${error ? "bg-red-500" : "bg-green-500"} py-2 px-5 rounded-lg w-full`)
                p.text-2xl.font-bold.text-center.my-10= header
                p.text-xl.text-center.my-10.leading-10= message
                if success 
                    a(href="/auth/login" class="text-slate-600 font-bold text-center text-sm mt-10 block uppercase") Ir al login
